{
  "extends": "@plobbo/tsconfig/internal-package.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ESNext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "env.d.ts",
    "eslint.config.js",
    "sst-env.d.ts"
  ]
}
